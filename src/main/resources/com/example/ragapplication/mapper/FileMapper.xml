<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.ragapplication.mapper.FileMapper">
    <select id="selectFilesById" resultType="com.example.ragapplication.pojo.FileData">
        SELECT id AS id, filename AS filename, upload_time AS uploadTime
        FROM file
        WHERE db_id = #{id}
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countFilesById" resultType="int">
        SELECT COUNT(*)
        FROM file
        WHERE db_id = #{id}
    </select>

    <insert id="insertFile" parameterType="com.example.ragapplication.pojo.FileData" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO file (filename, upload_time, db_id) VALUES (#{filename}, NOW(), #{dbId})
    </insert>

    <delete id="deleteFileById" parameterType="int">
        DELETE FROM file WHERE id = #{fileId}
    </delete>
</mapper>