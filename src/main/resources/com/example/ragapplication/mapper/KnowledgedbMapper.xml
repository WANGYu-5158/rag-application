<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.ragapplication.mapper.KnowledgedbMapper">
    <select id="queryAll" resultType="com.example.ragapplication.pojo.Knowledgedb">
        SELECT * FROM knowledgedb;
    </select>

    <select id="queryByName" resultType="com.example.ragapplication.pojo.Knowledgedb">
        SELECT * FROM knowledgedb
        WHERE name LIKE CONCAT('%', #{dbname}, '%');
    </select>

    <insert id="addDb">
        INSERT INTO knowledgedb (name, create_time, update_time, file_num)
        VALUES (#{dbname}, NOW(), NOW(), 0);
    </insert>
</mapper>