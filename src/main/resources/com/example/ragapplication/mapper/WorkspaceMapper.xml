<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.ragapplication.mapper.WorkspaceMapper">
    <select id="showAll" resultType="com.example.ragapplication.pojo.Workspace">
        SELECT * FROM workspace ORDER BY update_time DESC;
    </select>

    <select id="selectById" parameterType="int" resultType="com.example.ragapplication.pojo.Workspace">
        SELECT * FROM workspace WHERE id = #{id};
    </select>

    <insert id="save" parameterType="com.example.ragapplication.pojo.Workspace">
        INSERT INTO workspace
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="selectedDatabase != null">selected_database,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="selectedDatabase != null">#{selectedDatabase},</if>
        </trim>
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM workspace
        WHERE id = #{id}
    </delete>

</mapper>